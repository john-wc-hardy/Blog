<div class="container">
    <div class="row">
        <form action="/update/<%- postToUpdate.postID %>" method="post">
            <label>Title</label>
            <input type="text" name="title" value="<%= postToUpdate.title %>">
            <label>Body</label>
            <input type="text" name="body" value="<%= postToUpdate.body %>">
            <input type="submit" value="Update">
        </form>
    </div>
</div>